#include "../../includes/minishell.h"

static int	write_errstr(char *token)
{
	ft_putstr("minishell: syntax error near unexpected token `", 2);
	ft_putstr(token, 2);
	ft_putstr("'\n", 2);
	return (1);
}

static int	parse_operator(char **line, int i)
{
	char	operator;

	if (!line[i + 1])
	{
		write_errstr("newline");
		return (1);
	}
	operator = line[i][0];
	if (operator == '|' && line[i + 1][0] == '|')
	{
		write_errstr("|");
		return (1);
	}
	else if (ft_strlen(line[i]) > 1 && line[i][1] != operator)
	{
		operator = line[i][1];
		write_errstr(&operator);
		return (1);
	}
	else if (ft_strlen(line[i]) > 2)
	{
		operator = line[i][2];
		write_errstr(&operator);
		return (1);
	}
	return (0);
}

int	syntax_parsing(char **line, t_data *data)
{
	int	i;
	int	parsing_case;

	i = 0;
	while (line[i])
	{
		if (line[i][0] == '<' || line[i][0] == '>' || line[i][0] == '|')
		{
			if (parse_operator(line, i))
				return (-1);
		}
	}
}
